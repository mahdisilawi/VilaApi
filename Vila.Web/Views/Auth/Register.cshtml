@model Vila.Web.Models.Customer.RegisterModel
@{
    ViewData["Title"] = "ثبت نام در سایت";
    var success = TempData["success"] != null;
}
<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h3></h3>
                <h2 class="section-title mb-3">ثبت نام</h2>
                @if (success)
                {
                    <div class="alert alert-success"> 
                        ثبت نام با موفقیت انجام شد!
                    </div>
                }
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7 mb-5">


                <form method="post" class="p-5 bg-white">

                    <h2 class="h4 text-black mb-5">فرم ثبت نام</h2>
                    <div class="text-danger" asp-validation-summary="All"></div>


                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" asp-for="Mobile">موبایل</label>
                            <input type="text" asp-for="Mobile" class="form-control rounded-0">
                            @* <span class="text-danger" asp-validation-for="Mobile"></span> *@
                        </div>
                    </div>

                    <div class="row form-group">
                        <label class="text-black" asp-for="Mobile">رمز عبور</label>
                        <input type="text" asp-for="Password" class="form-control rounded-0">
                        @* <span class="text-danger" asp-validation-for="Password"></span> *@
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="message">متن پیام</label>
                            <textarea name="message" id="message" cols="30" rows="7" class="form-control rounded-0"
                                      placeholder="سوال و یا نظر خود را در اینجا وارد کنید تا پیگیری شود..."></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="ارسال" class="btn btn-black rounded-0 py-3 px-4">
                        </div>
                    </div>


                </form>
            </div>

        </div>

    </div>
</div>